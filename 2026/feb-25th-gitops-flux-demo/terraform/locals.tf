################################################################################
# All Configuration - Single Source of Truth
################################################################################

locals {
  #-----------------------------------------------------------------------------
  # General
  #-----------------------------------------------------------------------------
  project_name = "gitops-flux-demo"
  region       = "us-west-2"

  tags = {
    Project   = local.project_name
    ManagedBy = "terraform"
    Demo      = "true"
  }

  #-----------------------------------------------------------------------------
  # VPC
  #-----------------------------------------------------------------------------
  vpc_cidr            = "10.0.0.0/16"
  vpc_azs             = ["us-west-2a", "us-west-2b"]
  vpc_private_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
  vpc_public_subnets  = ["10.0.101.0/24", "10.0.102.0/24"]

  #-----------------------------------------------------------------------------
  # EKS
  #-----------------------------------------------------------------------------
  cluster_name        = "gitops-demo"
  cluster_version     = "1.31"
  node_instance_types = ["t3.medium"]
  node_desired_size   = 2
  node_min_size       = 1
  node_max_size       = 3

  #-----------------------------------------------------------------------------
  # GitHub / Flux
  #-----------------------------------------------------------------------------
  github_owner      = "shankyjs"
  github_repository = "talks"
  github_branch     = "master"
  flux_path         = "2026/feb-25th-gitops-flux-demo/clusters/gitops-demo"

  #-----------------------------------------------------------------------------
  # 1Password
  #-----------------------------------------------------------------------------
  onepassword_vault = "Private"
  onepassword_item  = "flux-cd-token-github"
}
